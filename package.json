{
  "name": "cybertools",
  "version": "1.0.0",
  "type": "module",
  "description": "🛡️ Professional cybersecurity toolkit with 345+ tools: WHOIS lookup, DNS analysis, 2FA testing, API security, and more. Deployed on Cloudflare with unified directory structure for educational and professional use.",
  "main": "src/index.js",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "pages:dev": "wrangler pages dev .",
    "pages:deploy": "wrangler pages deploy .",
    "serve": "python3 -m http.server 8000",
    "verify": "node scripts/verify-cloudflare.js",
    "verify:dns": "node scripts/verify-cloudflare.js --dns",
    "verify:worker": "node scripts/verify-cloudflare.js --worker",
    "verify:homepage": "node scripts/verify-cloudflare.js --homepage",
    "troubleshoot": "node scripts/verify-cloudflare.js --troubleshoot",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kedster/Kedsters-Static-Cyber-Tools.git"
  },
  "keywords": [
    "cybersecurity",
    "penetration-testing",
    "security-tools",
    "educational",
    "cloudflare-workers",
    "cloudflare-pages"
  ],
  "author": "CyberTools Team",
  "license": "MIT",
  "devDependencies": {
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "wrangler": "^3.0.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  },
  "engines": {
    "node": ">=16"
  }
}
